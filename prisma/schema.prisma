generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  roleId    String   @default("3bdb07a9-753e-4ac5-8238-f320aec857dc") // Replace with the actual ID of the member role
  role      Role     @relation(fields: [roleId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  permissions Permission[] @relation("RolePermission")
  users       User[]
  parentId    String? // Self-referencing field for hierarchy
  parent      Role?        @relation("RoleHierarchy", fields: [parentId], references: [id])
  children    Role[]       @relation("RoleHierarchy")
}

model Permission {
  id    String @id @default(uuid())
  name  String @unique
  roles Role[] @relation("RolePermission")
}

enum PostStatus {
  PENDING
  APPROVED
  REJECTED
  PUBLISHED
}

enum Action {
  APPROVED
  REJECTED
  PUBLISHED
}
